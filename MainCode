import pyautogui as pag
import random
import time

curr_coods = pag.position()
afk_counter = 0
while True:
    if pag.position() == curr_coods:
        afk_counter += 1
    else:
        afk_counter = 0
        curr_coods = pag.position()
    if afk_counter > 5:
        
        width, height = pag.size()
        
        x = random.randint(1, 2560)
        y = random.randint(1, 1440)
        pag.moveTo(x, y, 0.5)
        curr_coods = pag.position()
    print(f"AFK counter: {afk_counter}")
    time.sleep(2)